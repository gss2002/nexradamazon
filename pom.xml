		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-core</artifactId>
			<version>1.1.2</version>
		</dependency>
		<dependency>
			<groupId>edu.ucar</groupId>
			<artifactId>toolsUI</artifactId>
			<version>5.0.0-SNAPSHOT</version>
		</dependency>
			<dependency>
		<groupId>geotools</groupId>
