<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    		<resetJUL>true</resetJUL>
  	</contextListener>
	<appender name="TIME_BASED_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/home/gsenia/radarv2/logs/nexrad.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>/home/gsenia/radarv2/logs/nexrad.log.%d{yyyy-MM-dd}.log</fileNamePattern>
            		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                		<maxFileSize>5MB</maxFileSize>
            		</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>3</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<logger name="org.senia.amazon.nexrad.QueueMonitor" level="INFO"
		additivity="false">
		<appender-ref ref="TIME_BASED_FILE" />
	</logger>
	<logger name="org.senia.amazon.nexrad.NexradS3Worker" level="DEBUG"
		additivity="false">
		<appender-ref ref="TIME_BASED_FILE" />
	</logger>
	<logger name="org.senia.amazon.nexrad.AwsS3" level="DEBUG"
		additivity="false">
		<appender-ref ref="TIME_BASED_FILE" />
	</logger>
	<logger name="org.senia.amazon.nexrad.NexradMessageWorker"
		level="DEBUG" additivity="false">
		<appender-ref ref="TIME_BASED_FILE" />
	</logger>

	<!-- By default, the level of the root level is set to DEBUG -->
	<root level="INFO">
		<appender-ref ref="TIME_BASED_FILE" />
	</root>
</configuration>